@using CoreLayer.Dtos
@model UserDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Güncelleme Sayfası</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f4f4f4;
        }

        .form-container {
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 500px;
        }

        .form-label {
            font-weight: bold;
        }

        .form-control {
            border-radius: 5px;
            border: 1px solid #ccc;
            padding: 10px;
        }

        .btn-primary {
            padding: 10px 20px;
            background-color: #007bff;
            border: none;
            color: white;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .mb-3 {
            margin-bottom: 1.5rem;
        }

        .form-check-label {
            font-size: 14px;
        }

        .form-check-input {
            margin-top: 5px;
        }

        .form-text {
            font-size: 12px;
            color: #6c757d;
        }

        .password-container {
            position: relative;
        }

        .form-control {
            padding-right: 40px; 
        }
    </style>
</head>
<body>
    @await Html.PartialAsync("_Header")

    <form method="post" asp-action="UpdateUser" class="form-container">
        <input type="hidden" name="_method" value="PUT" />
        <div class="mb-3">
            <label for="exampleInputName" class="form-label">Ad</label>
            <input type="text" class="form-control" id="exampleInputName" asp-for="FirstName" placeholder="Adınızı güncelleyin">
        </div>
        <div class="mb-3">
            <label for="exampleInputSurname" class="form-label">Soyad</label>
            <input type="text" class="form-control" id="exampleInputSurname" asp-for="LastName" placeholder="Soyadınızı güncelleyin">
        </div>
        <div class="mb-3">
            <label for="exampleInputUsername" class="form-label">Kullanıcı Adı</label>
            <input type="text" class="form-control" id="exampleInputUsername" asp-for="UserName" placeholder="Kullanıcı adınızı güncelleyin">
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">E-Mail</label>
            <input type="email" class="form-control" id="exampleInputEmail1" asp-for="Email" placeholder="E-mail adresinizi güncelleyin" aria-describedby="emailHelp">
            <div id="emailHelp" class="form-text"></div>
        </div>

        <div class="mb-3 password-container">
            <label for="exampleInputPassword1" class="form-label">Yeni Şifre</label>
            <input type="text" class="form-control" id="exampleInputPassword1" asp-for="Password" placeholder="Yeni şifrenizi girin (isteğe bağlı)">
        </div>

        <button type="submit" class="btn btn-primary">Güncelle</button>
    </form>

</body>
</html>
