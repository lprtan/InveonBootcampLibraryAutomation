@{
    Layout = "~/Views/Shared/_AdminHeader.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rol Oluştur</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .form-container {
            background-color: #ffffff;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-top: 50px;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

            .form-container h2 {
                color: #5f6368;
                margin-bottom: 20px;
                text-align: center;
            }

        .form-group label {
            font-weight: bold;
            color: #343a40;
        }

        .form-control {
            border-radius: 8px;
            padding: 12px;
            font-size: 16px;
            border: 1px solid #ccc;
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            width: 100%;
            padding: 12px;
            font-size: 16px;
            border-radius: 8px;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .footer {
            text-align: center;
            margin-top: 30px;
            color: #888;
        }

            .footer a {
                color: #007bff;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>

    <div class="container">
        <div class="form-container">
            <h2>Yeni Rol Oluştur</h2>
            <form method="post" action="CreateRole">
                <div class="mb-3">
                    <label for="roleName" class="form-label">Rol Adı</label>
                    <input type="text" class="form-control" id="roleName" name="roleName" placeholder="Rol adını girin" required>
                </div>
                <button type="submit" class="btn btn-primary">Rol Oluştur</button>
            </form>
        </div>
    </div>
</body>
</html>